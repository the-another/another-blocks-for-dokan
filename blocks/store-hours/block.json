{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "the-another/dokan-store-hours",
	"title": "Store Hours",
	"category": "dokan",
	"ancestor": [ "the-another/dokan-store-list", "the-another/dokan-store-card", "the-another/dokan-store-banner" ],
	"icon": "clock",
	"description": "Display store opening hours.",
	"keywords": [ "dokan", "vendor", "store", "hours", "time" ],
	"textdomain": "dokan-blocks",
	"usesContext": [ "dokan/vendor" ],
	"supports": {
		"html": false,
		"align": true,
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"vendorId": {
			"type": "number",
			"default": 0
		},
		"layout": {
			"type": "string",
			"default": "compact",
			"enum": [ "compact", "detailed" ]
		},
		"showCurrentStatus": {
			"type": "boolean",
			"default": true
		}
	},
	"example": {
		"attributes": {
			"vendorId": 0,
			"layout": "compact"
		}
	},
	"render": "dokan_render_store_hours_block"
}
