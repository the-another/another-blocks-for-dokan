{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "the-another/dokan-store-list",
	"title": "Store Query Loop",
	"category": "dokan",
	"icon": "grid-view",
	"description": "Display grid/list of vendor stores with customizable layout.",
	"keywords": [ "dokan", "vendor", "store", "list", "query", "loop" ],
	"textdomain": "dokan-blocks",
	"providesContext": {
		"dokan/vendor": "previewVendor"
	},
	"supports": {
		"html": false,
		"align": [ "wide", "full" ],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"perPage": {
			"type": "number",
			"default": 12
		},
		"columns": {
			"type": "number",
			"default": 3
		},
		"displayLayout": {
			"type": "string",
			"default": "grid",
			"enum": [ "grid", "list" ]
		},
		"orderBy": {
			"type": "string",
			"default": "name",
			"enum": [ "date", "name", "rating", "featured" ]
		},
		"showFeaturedOnly": {
			"type": "boolean",
			"default": false
		},
		"previewVendor": {
			"type": "object",
			"default": null
		}
	},
	"example": {
		"attributes": {
			"perPage": 12,
			"columns": 3,
			"displayLayout": "grid"
		}
	}
}
