{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "the-another/dokan-store-header",
	"title": "Store Header",
	"category": "dokan",
	"icon": "store",
	"description": "Display vendor store header with banner, avatar, and key information.",
	"keywords": [ "dokan", "vendor", "store", "header" ],
	"textdomain": "dokan-blocks",
	"supports": {
		"html": false,
		"align": [ "wide", "full" ],
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"background": true,
			"text": true
		}
	},
	"attributes": {
		"vendorId": {
			"type": "number",
			"default": 0
		},
		"showBanner": {
			"type": "boolean",
			"default": true
		},
		"showContactInfo": {
			"type": "boolean",
			"default": true
		},
		"showSocialLinks": {
			"type": "boolean",
			"default": true
		},
		"showStoreHours": {
			"type": "boolean",
			"default": true
		},
		"layout": {
			"type": "string",
			"default": "default",
			"enum": [ "default", "layout2", "layout3" ]
		}
	},
	"example": {
		"attributes": {
			"vendorId": 0,
			"showBanner": true,
			"showContactInfo": true,
			"layout": "default"
		}
	}
}
