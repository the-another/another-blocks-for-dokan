{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "the-another/dokan-store-banner",
	"title": "Store Banner",
	"category": "dokan",
	"icon": "format-image",
	"description": "Display the vendor store banner as a background container with customizable content.",
	"keywords": [ "dokan", "vendor", "store", "banner", "cover", "image", "container" ],
	"textdomain": "dokan-blocks",
	"usesContext": [ "dokan/vendor" ],
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		},
		"layout": {
			"allowSwitching": true,
			"allowInheriting": false,
			"default": {
				"type": "flex",
				"orientation": "horizontal",
				"flexWrap": "wrap",
				"justifyContent": "left"
			}
		}
	},
	"attributes": {
		"align": {
			"type": "string",
			"default": "wide"
		},
		"height": {
			"type": "number",
			"default": 300
		},
		"minHeight": {
			"type": "number",
			"default": 200
		},
		"backgroundOverlay": {
			"type": "number",
			"default": 0.3
		},
		"overlayColor": {
			"type": "string",
			"default": "#000000"
		},
		"backgroundPosition": {
			"type": "string",
			"default": "center"
		},
		"backgroundSize": {
			"type": "string",
			"default": "cover"
		}
	},
	"example": {
		"attributes": {
			"height": 300
		}
	}
}
